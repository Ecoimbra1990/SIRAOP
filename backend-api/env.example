# Configurações do Servidor
PORT=8080
NODE_ENV=development

# Configurações do Banco de Dados PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DATABASE=siraop_db

# Para Cloud Run (produção)
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Configurações Google Cloud
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=siraop-storage
GCP_KEY_FILE=path/to/service-account-key.json

# Configurações de Criptografia
CPF_ENCRYPTION_KEY=your-32-character-encryption-key-here

# URL do Frontend (para CORS)
FRONTEND_URL=http://localhost:3000
